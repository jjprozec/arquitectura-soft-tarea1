

<h1>Todos los Cursos</h1>

<table>
  <thead>
    <tr>
      <th>Sigla </th>
      <th>Nombre </th>
      <th>Descripcion </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cursos.each do |curso| %>
      <tr>
        <td><%= curso.sigla %></td>
        <td><%= curso.name %></td>
        <td><%= curso.body %></td>
        <td><%= link_to 'Show  ', curso %></td>
        <td><%= link_to 'Edit  ', edit_curso_path(curso) %></td>
        <td><%#= link_to 'Comentarios  ', comments_path %></td>
        <td><%= link_to 'Destroy  ', curso, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Curso  ', new_curso_path %>
<%= link_to 'Back', root_path %>
